<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>RLP_Other_Attachment</fullName>
    <active>true</active>
    <description>If rlp attachment type is &quot;Other&quot; then Other field is mandatory.</description>
    <errorConditionFormula>ISPICKVAL(RLP_Attachment_Name__c , &apos;Other Attachment&apos; ) &amp;&amp; ISBLANK( Other_Attachment_Name__c)</errorConditionFormula>
    <errorDisplayField>Other_Attachment_Name__c</errorDisplayField>
    <errorMessage>Other Attachment Name is required.</errorMessage>
</ValidationRule>
